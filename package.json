{
  "name": "vgc",
  "version": "0.0.1",
  "description": "A video game collection database",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robaboyd/VGC.git"
  },
  "author": "Bobby Boyd and Ricky Van Horn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robaboyd/VGC/issues"
  },
  "homepage": "https://github.com/robaboyd/VGC#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.4",
    "bulma": "^0.7.3",
    "concurrently": "^4.1.0",
    "connect-mongodb-session": "^2.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "fuzzysort": "^1.1.4",
    "mongoose": "^5.4.11",
    "nodemon": "^1.18.9",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "react-loader-spinner": "^2.3.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  }
}
